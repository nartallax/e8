{
  "name": "@nartallax/e8",
  "version": "0.0.1",
  "description": "2d game engine",
  "author": "Nartallax",
  "license": "0BSD",
  "types": "./target/e8.d.ts",
  "main": "e8.js",
  "type": "module",
  "scripts": {
    "typecheck": "cd src && npx tsc --noEmit && cd - > /dev/null",
    "test": "npm run test:prepare && npm run typecheck && npm run test:generate && npm run test:build && npm run test:run",
    "test:prepare": "rm -f src/generated/test.ts",
    "test:generate": "npx clamsensor_codegen src src/generated/test.ts",
    "test:build": "npx parcel build --target test --no-cache",
    "test:run": "node ./dist/test/test.js",
    "build": "npm run typecheck && npm run build:prepare && npm run build:build && npm run build:dts && npm run build:copy_static",
    "build:prepare": "rm -rf ./target && rm -rf ./dist",
    "build:build": "npx parcel build --target release --no-cache",
    "build:copy_static": "cp ./LICENSE ./target/ && cp ./README.md ./target && cp ./package-lock.json ./target && npm run build:cut_package",
    "build:cut_package": "npx package-cutter --output ./target/package.json --set types=\"e8.d.ts\"",
    "build:dts": "npx parcel build --target types --no-cache",
    "dev": "npm run dev:js & npm run dev:dts & wait",
    "dev:dts": "npx parcel watch --target types --no-cache",
    "dev:js": "npx parcel watch --target release --no-cache",
    "pack": "npm run build && cd target && npm pack && mv *.tgz e8.tgz"
  },
  "devDependencies": {
    "@nartallax/clamsensor": "^2.0.10",
    "@nartallax/package-cutter": "^1.0.4",
    "@parcel/packager-ts": "^2.12.0",
    "@parcel/plugin": "^2.12.0",
    "@parcel/transformer-glsl": "^2.12.0",
    "@parcel/transformer-typescript-types": "^2.12.0",
    "@types/chai": "^4.3.6",
    "@types/pako": "^2.0.3",
    "@types/rbush": "^3.0.0",
    "@types/semver": "^7.5.8",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "chai": "^4.3.8",
    "eslint": "^8.49.0",
    "parcel": "^2.12.0",
    "parcel-resolver-ts-base-url": "^1.3.1",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.11.0"
  },
  "dependencies": {
    "pako": "^2.1.0",
    "rbush": "^3.0.1",
    "semver": "^7.6.3",
    "unzipit": "^1.4.3",
    "xml-js": "^1.6.11"
  },
  "targets": {
    "release": {
      "distDir": "./target",
      "source": "src/e8.ts",
      "context": "node",
      "isLibrary": true,
      "optimize": true,
      "sourceMap": false,
      "outputFormat": "esmodule"
    },
    "test": {
      "source": "src/generated/test.ts",
      "context": "node",
      "optimize": false,
      "outputFormat": "esmodule"
    },
    "types": {
      "source": "src/e8.ts",
      "sourceMap": false
    }
  }
}
